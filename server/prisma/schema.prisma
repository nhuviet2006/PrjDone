generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  password  String
  role      String   @default("USER")
  events       Event[]
  // Relations
  refreshTokens RefreshToken[]
  tickets       Ticket[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Event {
  id           Int      @id @default(autoincrement())
  title        String
  date         String
  month        String
  time         String
  location     String
  speaker      String
  image        String
  description  String
  price        Float    
  totalTickets Int     

  userId       Int
  createdAt    DateTime @default(now())
  createdBy    User     @relation(fields: [userId], references: [id])
  tickets      Ticket[] 
}

model Ticket {
  id          Int      @id @default(autoincrement())
  userId      Int
  eventId     Int
  purchasedAt DateTime @default(now())

  // Khóa ngoại
  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Registration {
  id           Int      @id @default(autoincrement())
  userId       Int?     // Có thể null nếu cho phép khách vãng lai đăng ký
  eventName    String   // Tên sự kiện
  ticketClass  String
  fullName     String
  dob          String   // Ngày sinh
  idCard       String   // Số CCCD
  phone        String
  email        String
  createdAt    DateTime @default(now())
}
